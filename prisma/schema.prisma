generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum Role {
  admin
  owner
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  role         Role   @default(owner)
  location     String
  phone_number String
  isActive     Boolean  @default(true)
  books        Book[]
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  description String?
  quantity    Int
  coverPhoto  String
  isActive    Boolean  @default(true)
  ownerId     Int
  owner       User     @relation(fields: [ownerId], references: [id])
  rents       Rent[]
}

model Rent {
  id      Int    @id @default(autoincrement())
  bookId  Int
  status  String
  price   Float
  book    Book   @relation(fields: [bookId], references: [id])
}
